{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "rootDirs": [
      "src/",
      "tests/"
    ],
    "declaration": true,
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "build/",
    "lib": ["es2015", "es2016", "dom"],
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
